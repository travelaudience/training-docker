<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %msg%n</pattern>
        </encoder>
    </appender>
    <logger additivity="false" level="error" name="io.netty.util.internal.MacAddressUtil">
        <appender-ref ref="console"/>
    </logger>
    <logger additivity="false" level="debug" name="com.travelaudience.echo">
        <appender-ref ref="console"/>
    </logger>
    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
